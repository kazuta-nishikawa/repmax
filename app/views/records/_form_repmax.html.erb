<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: record, local: true) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
      
        <div class="form-group">
        <%= f.label :date, 'Day' %>
        <div class="row col-12">
          <%= f.date_select :date,{start_year: Date.today.year-50, end_year: Date.today.year}, {class: 'form-control col-3'} %>
        </div>

      <div class="form-group">
        <%= f.label :workout, '種目' %>
        <%= f.text_field :workout, class: 'form-control' %>
      </div>
     
      <div class="form-group">
        <%= f.label :weight, '使用重量' %>
        <%= f.number_field :weight, step:"0.1", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :rep, '回数' %>
        <%= f.number_field :rep, class: 'form-control' %>
      </div>

      <%= f.submit '保存', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>