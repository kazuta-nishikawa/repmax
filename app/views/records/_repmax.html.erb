<% if records.any? %>
  <% records.group_by(&:date).each do |date, values| %>
    <hr>
    <div class="text-light text-left">
        <h3><i class="fas fa-calendar-day"></i><%= date %></h3>
    </div>
        <table class="table table-dark">
          <thead>
            <tr>
              <th scope="col">Workout</th>
              <th scope="col">Lift</th>
              <th scope="col">Rep</th>
              <th scope="col">1RepMax</th>
              <th scope="col">Bodyweight</th>
              <th scope="col">Ratio</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
    <% values.each do |record| %>
            <tr>
              <td><%= record.workout %></td>
              <td><%= record.weight %></td>
              <td><%= record.rep %></td>
              <td><%= calc_repmax(record.weight, record.rep) %></td>
              <td><%= record.bodyweight %></td>
              <% if record.bodyweight %>
                <td><%= calc_ratio(record.bodyweight) %></td>
              <% else %>
                <td></td>
              <% end %>
              
              <% if current_user == record.user %>
                <td><%= link_to "Edit", edit_record_path(record.id), class: 'btn btn-success btn-sm' %>     <%= link_to "Delete", record, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %></td>
              <% else %>
                <td></td>
              <% end %>
            </tr>
    <% end %>
          </tbody>
        </table>
  <% end %>
<% end %>